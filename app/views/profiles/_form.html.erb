<%= form_with(model: profile) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
        <% profile.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   <div class="field">
    <%= form.label :image %>
      <%if profile.image.attached? %>
      <%= image_tag profile.image , style:"height:250px; display: block;" %>   
      <br>
      <% end %>    
      <%= form.file_field :image %>
    </div>

    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :phone %>
    <%= form.number_field :phone %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_area :address %>
  </div>
  <div class="field">
    <%#= form.label :user_id %>
     <%= form.number_field :user_id ,value: current_user.id, type:"hidden" %>
    
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
